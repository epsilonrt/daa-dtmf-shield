# - Config file for the daadtmf package
# It defines the following variables
#  DAADTMF_INCLUDE_DIRS - include directories for daadtmf
#  DAADTMF_LIBRARY_DIRS - where to find libraries
#  DAADTMF_DATA_DIR     - where to find daadtmf data
#  DAADTMF_LIBRARIES    - libraries to link against
#  DAADTMF_CFLAGS       - all required cflags

set(CMAKE_MODULE_PATH @DAADTMF_INSTALL_CMAKE_DIR@ ${CMAKE_MODULE_PATH})

# Compute paths
get_filename_component(DAADTMF_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

unset(DAADTMF_INCLUDE_DIRS)
foreach(RELATIVE_PATH IN LISTS @CONF_INCLUDE_DIRS@)
  get_filename_component(ABSOLUTE_PATH ${RELATIVE_PATH} ABSOLUTE)
  list(APPEND DAADTMF_INCLUDE_DIRS "${ABSOLUTE_PATH}")
endforeach()

unset(DAADTMF_LIBRARY_DIRS)
foreach(RELATIVE_PATH IN LISTS @CONF_LIB_DIRS@)
  get_filename_component(ABSOLUTE_PATH ${RELATIVE_PATH} ABSOLUTE)
  list(APPEND DAADTMF_LIBRARY_DIRS "${ABSOLUTE_PATH}")
endforeach()

# Our library dependencies (contains definitions for IMPORTED targets)
include("${DAADTMF_CMAKE_DIR}/daadtmf.cmake")

# These are IMPORTED targets created by daadtmf.cmake
set(DAADTMF_LIBRARIES daadtmf @PIDUINO_LIBRARIES@)

set(DAADTMF_CFLAGS @PIDUINO_CFLAGS@)
set(CMAKE_MODULE_PATH "${DAADTMF_CMAKE_DIR}")
set(DAADTMF_DATA_DIR @DAADTMF_INSTALL_DATA_DIR@)

